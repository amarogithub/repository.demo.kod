<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.simplekodi" name="Simple Kodi" version="1.0.0" provider-name="SimpleKodi">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">How to make your own Video Add-on for Kodi.</summary>
    <description lang="en">Visit my YouTube channel for more tutorials. https://YouTube.com/SimpleKodi</description>
    <disclaimer lang="en">Use it at your own risk.</disclaimer>
    <language>en</language>
    <platform>all</platform>
    <website>http://SimpleKodi.com</website>
    <email>SimpleKodi@hotmail.com</email>
  </extension>
</addon>

